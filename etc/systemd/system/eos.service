[Unit]
Description=EOS All Services
Requires=eos@mq.service eos@sync.service eos@mgm.service eos@fed.service eos@fst.service eos@fst1.service eos@fst2.service eos@fst3.service eos@fst4.service eos@fst5.service

[Service]
EnvironmentFile=/etc/sysconfig/eos_env
ExecStart=/bin/echo Starting $mq $sync $mgm $fst $fed \n \
When you want status for all services, please run \'systemctl status eos@*\'.
Type=oneshot
KillMode=none

[Install]
RequiredBy=multi-user.target